<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/content_miner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="6dp">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5">
            <ScrollView
                android:id="@+id/scrollview_content_miner"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </ScrollView>
            <LinearLayout
                android:id="@+id/child_content_miner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp"
                    android:background="@color/background_selected_chart">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="2dp"
                            android:text="@string/reported_hashrate"
                            android:textAlignment="center"
                            android:textColor="@color/colorWhite"
                            android:lines="1"
                            android:ellipsize="end"
                            android:textSize="12sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal"
                            android:paddingBottom="5dp"
                            android:paddingTop="3dp">

                            <TextView
                                android:id="@+id/reported_hashrate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" "
                                android:textColor="@color/color_txt_reported_hashrate"
                                android:textSize="13.5sp" />

                            <TextView
                                android:id="@+id/unit_reported"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorWhite"
                                android:textSize="10sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="2dp"
                            android:text="@string/current_hashrate"
                            android:textAlignment="center"
                            android:textColor="@color/colorWhite"
                            android:lines="1"
                            android:ellipsize="end"
                            android:textSize="12sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal"
                            android:paddingBottom="5dp"
                            android:paddingTop="3dp">

                            <TextView
                                android:id="@+id/current_hashrate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/color_txt_current_hashrate"
                                android:textSize="13.5sp" />

                            <TextView
                                android:id="@+id/unit_current"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorWhite"
                                android:textSize="10sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="2dp"
                            android:text="@string/average_hashrate"
                            android:textAlignment="center"
                            android:textColor="@color/colorWhite"
                            android:lines="1"
                            android:ellipsize="end"
                            android:textSize="12sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal"
                            android:paddingBottom="5dp"
                            android:paddingTop="3dp">

                            <TextView
                                android:id="@+id/average_hashrate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/color_txt_average_hashrate"
                                android:textSize="13.5sp" />

                            <TextView
                                android:id="@+id/unit_average"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorWhite"
                                android:textSize="10sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="64dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/title_worker"
                            android:textAlignment="center"
                            android:textColor="@color/colorWhite"
                            android:paddingTop="2dp"
                            android:lines="1"
                            android:ellipsize="end"
                            android:textSize="12sp"/>
                        <TextView
                            android:id="@+id/active_workers"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingTop="3dp"
                            android:paddingBottom="5dp"
                            android:textColor="@color/chart_worker"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textSize="13.5sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/background_selected_chart"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingBottom="1dp">

                            <TextView
                                android:id="@+id/textView6"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/valid"
                                android:textAlignment="center"
                                android:textColor="@color/colorWhite"
                                android:lines="1"
                                android:ellipsize="end"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/stale"
                                android:textAlignment="center"
                                android:textColor="@color/colorWhite"
                                android:lines="1"
                                android:ellipsize="end"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/textView5"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/invalid"
                                android:textAlignment="center"
                                android:textColor="@color/colorWhite"
                                android:lines="1"
                                android:ellipsize="end"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="64dp"
                                android:layout_height="match_parent"
                                android:ellipsize="end"
                                android:lines="1"
                                android:text="@string/last_seen"
                                android:textAlignment="center"
                                android:textColor="@color/colorWhite"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingBottom="1dp">

                            <TextView
                                android:id="@+id/valid_shares"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:lines="1"
                                android:text=""
                                android:textColor="@color/colorWhite"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/stale_shares"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:lines="1"
                                android:text=""
                                android:textColor="@color/colorWhite"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/invalid_shares"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:lines="1"
                                android:text=""
                                android:textColor="@color/colorWhite"
                                android:textSize="12sp" />

                            <LinearLayout
                                android:layout_width="64dp"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:layout_gravity="center">

                                <TextView
                                    android:id="@+id/last_screen"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:lines="1"
                                    android:textColor="@color/colorWhite" />

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/background_selected_chart"
                            android:orientation="horizontal"
                            android:paddingLeft="6dp"
                            android:paddingRight="10dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="1dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/upaid_balance"
                                android:textColor="@color/color_txt_price"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/unpaid_balance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/color_txt_price"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/title_unpaid"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/color_txt_price"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/color_title_money">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:weightSum="1">

                                <LinearLayout
                                    android:id="@+id/percent_next_payout"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.0"
                                    android:background="@color/next_payout"
                                    android:orientation="horizontal" />
                            </LinearLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:paddingBottom="1dp"
                                android:paddingTop="2dp"
                                android:paddingLeft="6dp"
                                android:paddingRight="10dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/next_payout"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/time_next_payout"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:text=""
                                    android:textColor="@color/colorWhite"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/goal_day"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:text=""
                                    android:textColor="@color/colorWhite"
                                    android:textSize="12sp" />
                            </RelativeLayout>
                        </FrameLayout>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/show_chart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:background="@color/background_selected_chart"
                    android:orientation="horizontal"
                    android:padding="4dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Show Chart"
                        android:textColor="@color/colorWhite"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="20dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/expand_chart_down" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/view_chart"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                </LinearLayout>

                //coins
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/background_grey"
                    android:orientation="vertical"
                    android:paddingTop="1dp"
                    android:paddingBottom="2dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp">

                        <View
                            android:layout_width="6dp"
                            android:layout_height="0dp"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="0.8"
                            android:layout_height="wrap_content"
                            android:text="Period"
                            android:gravity="center_vertical|left"
                            android:layout_gravity="center_vertical|left"
                            android:textColor="@color/color_title_money"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/title_coin"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/eth_title"
                            android:textAlignment="center"
                            android:textColor="@color/color_title_money"
                            android:textSize="13sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/usd"
                            android:textAlignment="center"
                            android:textColor="@color/color_title_money"
                            android:textSize="13sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:lines="1"
                            android:text="@string/btc"
                            android:textAlignment="center"
                            android:textColor="@color/color_title_money"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingBottom="1dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingTop="1dp">

                        <View
                            android:layout_width="6dp"
                            android:layout_height="0dp"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="0.8"
                            android:layout_height="wrap_content"
                            android:text="@string/hour"
                            android:gravity="center_vertical|left"
                            android:layout_gravity="center_vertical|left"
                            android:textColor="@color/color_title_money"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/hour_eth"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/hour_usd"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/hour_btc"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:lines="1"
                            android:textAlignment="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingBottom="1dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingTop="1dp">

                        <View
                            android:layout_width="6dp"
                            android:layout_height="0dp"/>

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="0dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center_vertical|left"
                            android:layout_weight="0.8"
                            android:gravity="center_vertical|left"
                            android:text="Day"
                            android:textColor="@color/color_title_money"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/day_eth"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/day_usd"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/day_btc"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:lines="1"
                            android:textAlignment="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingBottom="1dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingTop="1dp">

                        <View
                            android:layout_width="6dp"
                            android:layout_height="0dp"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="0.8"
                            android:layout_height="wrap_content"
                            android:text="@string/week"
                            android:gravity="center_vertical|left"
                            android:layout_gravity="center_vertical|left"
                            android:textColor="@color/color_title_money"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/week_eth"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/week_usd"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/week_btc"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:lines="1"
                            android:textAlignment="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingTop="1dp"
                        android:visibility="visible">

                        <View
                            android:layout_width="6dp"
                            android:layout_height="0dp"/>

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="0dp"
                            android:layout_weight="0.8"
                            android:layout_height="wrap_content"
                            android:text="@string/month"
                            android:gravity="center_vertical|left"
                            android:layout_gravity="center_vertical|left"
                            android:textColor="@color/color_title_money"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/month_eth"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/month_usd"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/month_btc"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:lines="1"
                            android:textAlignment="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="13sp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/chart_miner"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical"
            android:paddingBottom="0dp"
            android:paddingTop="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/chart_hashrate"
                    android:layout_width="64dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:background="@color/background_selected_chart"
                    android:gravity="center"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:text="@string/hashrate"
                    android:textColor="@color/colorWhite"
                    android:textSize="9sp" />

                <TextView
                    android:id="@+id/chart_shares"
                    android:layout_width="64dp"
                    android:layout_height="match_parent"
                    android:background="@color/background_unselected_chart"
                    android:gravity="center"
                    android:text="@string/shares"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:textColor="@color/colorWhite"
                    android:textSize="9sp" />
            </LinearLayout>

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/line_chart"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/background_selected_chart"
                android:layout_marginBottom="4dp"
                android:visibility="visible" />

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/bar_chart"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/background_selected_chart"
                android:layout_marginBottom="5dp"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/price_coin"
                android:layout_width="match_parent"
